---
interface Props {
  class?: string;
  narrow?: boolean;
}

const { class: className = '', narrow = false } = Astro.props;
---

<section class:list={['py-16 md:py-24', narrow ? 'max-w-[65ch] mx-auto px-6' : 'px-6', className]} aria-label={Astro.slots.has('label') ? undefined : undefined}>
  {Astro.slots.has('label') && (
    <h2 class="sr-only"><slot name="label" /></h2>
  )}
  <div class={narrow ? '' : 'max-w-4xl mx-auto'}>
    <slot />
  </div>
</section>
